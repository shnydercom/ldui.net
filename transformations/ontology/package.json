{
  "name": "@uxiverse.com/ontology",
  "version": "0.1.0",
  "description": "a repository for the development of an ontology and a documentation for Linked Data UI (dot net)",
  "main": "index.js",
  "repository": "https://github.com/shnydercom/uxiverse.com.git",
  "author": "contact@metaexplorer.io",
  "license": "EUPL-1.2",
  "dependencies": {
    "jsonld": "^3.3.0",
    "jsonld-cli": "^0.3.0",
    "jsonld-lint-cli": "^0.3.0",
    "schema-dts": "^0.8.3",
    "schema-dts-gen": "^0.8.3"
  },
  "scripts": {
    "clean": "rm -r ./cli-gen",
    "initmonorepo": "mkdir ./cli-gen",
    "build:downloadschema": "yarn ts-node ./buildsteps/downloadSchemaNT.ts",
    "build:lint": "echo ignoring linting for now, run with: jsonld-lint ./ontology/uxiverse.com.jsonld",
    "build:jsld": "jsonld format ./ontology/uxiverse.com.jsonld --nquads > ./cli-gen/uxiverse-ontology.nt",
    "build:combine": "yarn ts-node ./buildsteps/concatNTFiles.ts",
    "build:dts": "schema-dts-gen --context=uxi:http://uxiverse.com/ontology,schema:https://schema.org --ontology=doNotUse --file=./cli-gen/combined-ontology.nt > ./cli-gen/ontology.ts",
    "build": "yarn build:jsld && yarn build:combine && yarn build:dts"
  },
  "devDependencies": {
    "@types/argparse": "^2.0.0",
    "@types/array.prototype.flatmap": "^1.2.2",
    "@types/diff": "^4.0.2",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/unist": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "clang-format": "^1.4.0",
    "coveralls": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "del-cli": "^3.0.1",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.5.2",
    "jest": "^26.4.2",
    "mkdirp": "^1.0.4",
    "prettier": "^2.1.2",
    "rehype-minify-whitespace": "^4.0.5",
    "rehype-parse": "^7.0.1",
    "rehype-raw": "^5.0.0",
    "remark-parse": "^9.0.0",
    "remark-rehype": "^8.0.0",
    "remark-wiki-link": "^1.0.0",
    "ts-jest": "^26.4.0",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3",
    "unified": "^9.2.0"
  }
}
